{
  "name": "@paint/api",
  "version": "1.0.0",
  "description": "Paint App API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev:api": "ts-node-dev --respawn --watch ../shared/dist --transpile-only src/server.ts",
    "dev:shared": "cd ../shared && npm run dev",
